{% extends is_granted('ROLE_ADMIN') ? 'base_admin.html.twig' : 'base.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block body %}
    <h1>Invoice</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ invoice.id }}</td>
        </tr>
        <tr>
            <th>DiscountRate</th>
            <td>{{ invoice.discountRate }}</td>
        </tr>
        <tr>
            <th>CreationTime</th>
            <td>{{ invoice.creationTime ? invoice.creationTime|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_invoice_index') }}">back to list</a>

    {% if is_granted('ROLE_PHARMACY') %}
        <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}">edit</a>
        {{ include('invoice/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
