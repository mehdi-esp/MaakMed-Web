{% extends is_granted('ROLE_ADMIN') ? 'base_admin.html.twig' : 'base.html.twig' %}

{% set show_progress_bar = false %}

{% block title %}Invoice{% endblock %}

{% block body %}
    <main class="container mx-auto py-4">
        <section class="flex items-center flex-col">
          <a title="To list" class="btn btn-sm btn-ghost btn-secondary my-4" href="{{ path('app_invoice_index') }}">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
              </svg>
              <span class="ml-2 text-lg">To list</span>
          </a>
            <twig:Invoice:Card invoice="{{ invoice }}"/>
        </section>
    </main>
{% endblock %}
