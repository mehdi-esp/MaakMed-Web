{% extends 'base.html.twig' %}
  {% block body %}
  <div class="toast fixed top-0 right-0">
          {% for label, messages in app.flashes %}
              {% for message in messages %}
                  <div
                    role="alert"
                    class="alert alert-{{ label }} transition transform duration-1000 hidden "
                    {{ stimulus_controller("notification", {delay: 3000}) }}
                    data-transition-enter-from="opacity-0 translate-x-6"
                    data-transition-enter-to="opacity-100 translate-x-0"
                    data-transition-leave-from="opacity-100 translate-x-0"
                    data-transition-leave-to="opacity-0 translate-x-6"
                  >
                      <span class="text-white">{{ message }}</span>
                      <button {{ stimulus_action("notification", "hide") }} >
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                               class="size-6">
                              <path class="text-white" fill-rule="evenodd"
                                    d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Zm-1.72 6.97a.75.75 0 1 0-1.06 1.06L10.94 12l-1.72 1.72a.75.75 0 1 0 1.06 1.06L12 13.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L13.06 12l1.72-1.72a.75.75 0 1 0-1.06-1.06L12 10.94l-1.72-1.72Z"
                                    clip-rule="evenodd"/>
                          </svg>
                      </button>
                  </div>
              {% endfor %}
          {% endfor %}
      </div>
<section class="text-gray-600 body-font overflow-hidden">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h1 class="sm:text-4xl text-3xl font-medium title-font mb-2 text-gray-900">Pricing</h1>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-base text-gray-500">MaakMed exclusive Insurance Plans.</p>
      <div class="flex mx-auto border-2 border-indigo-500 rounded overflow-hidden mt-6">
        <button class="py-1 px-4 focus:outline-none">Annually</button>
      </div>
    </div>
    <div class="flex flex-wrap -m-4">
      {% for plan in plans %}
      <div class="p-4 xl:w-1/4 md:w-1/2 w-full">
        <div class="h-full p-6 rounded-lg border-2 border-indigo-500 flex flex-col relative overflow-hidden">
          <span class="bg-indigo-500 text-white px-3 py-1 tracking-widest text-xs absolute right-0 top-0 rounded-bl">Test</span>
          <h2 class="text-sm tracking-widest title-font mb-1 font-medium">{{ plan.name }}</h2>
          <h1 class="text-5xl text-gray-900 leading-none flex items-center pb-4 mb-4 border-b border-gray-200">
            <span>${{ plan.cost }}</span>
            <span class="text-lg ml-1 font-normal text-gray-500">/yr</span>
          </h1>

          <p class="flex items-center text-gray-600 mb-2">
            <span class="w-4 h-4 mr-2 inline-flex items-center justify-center bg-gray-400 text-white rounded-full flex-shrink-0">
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" class="w-3 h-3" viewBox="0 0 24 24">
                <path d="M20 6L9 17l-5-5"></path>
              </svg>
            </span>{{ plan.description}}
                      <p class="text-xs text-gray-500 mt-3"> Reimburesment rate: {{ plan.reimbursementRate }}</p>
                      <p class="text-xs text-gray-500 mt-3"> Plan Ceiling: {{ plan.ceiling }}</p>
          </p>

         <form method="POST" action="{{ path('app_subscription_add', {'planId': plan.id}) }}">
             <button type="submit" class="flex items-center mt-auto text-white bg-indigo-500 border-0 py-2 px-4 w-full focus:outline-none hover:bg-indigo-600 rounded" data-subscribe-button="true">
                 Subscribe
                 <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-auto" viewBox="0 0 24 24">
                     <path d="M5 12h14M12 5l7 7-7 7"></path>
                 </svg>
             </button>
         </form>

        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% endblock %}

