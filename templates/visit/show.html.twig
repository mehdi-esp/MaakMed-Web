{% extends 'base.html.twig' %}

{% block title %}Visit{% endblock %}

{% block body %}
    <h1>Visit</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ visit.id }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ visit.date ? visit.date|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ visit.type.displayName }}</td>
        </tr>
        <tr>
            <th>Diagnosis</th>
            <td>{{ visit.diagnosis }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_visit_index') }}">back to list</a>

    {% if is_granted('ROLE_DOCTOR') %}
        <a href="{{ path('app_visit_edit', {'id': visit.id}) }}">edit</a>

        {{ include('visit/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
