{% extends ('ROLE_ADMIN' in app.user.roles) ? 'base_admin.html.twig' : 'base.html.twig' %}

{% block title %}Payment Failed{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg max-w-md mx-auto p-6 space-y-2">
            <h1 class="text-2xl font-semibold text-red-600">Payment Failed</h1>
            <p class="text-gray-600">Your payment could not be processed. Please contact the Admins or try again.</p>
            <a href="{{ path('app_home') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                Return to Home
            </a>
        </div>
    </div>
{% endblock %}