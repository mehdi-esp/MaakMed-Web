{# templates/components/InsurancePlanForm.html.twig #}

<div{{ attributes }}>
    <h1 class="text-3xl font-bold text-center mb-4 mt-4">InsurancePlan</h1>
    {{ form_start(form) }}
    <div class=" mt-10 flex items-center justify-center ">
        <div class="w-full md:w-1/2 lg:w-1/3 xl:w-1/3 mx-4 sm:mx-6 md:mx-5 lg:mx-12 xl:mx-16 py-6 px-4 sm:px-6 md:px-8 lg:px-12 xl:px-16 bg-white shadow-md rounded-lg">
        <div class="mb-4">
            {{ form_label(form.Name) }}
            {{ form_widget(form.Name, {'attr': {'class': 'py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none ', 'placeholder': 'Full name'}}) }}
          <div class="text-red-500 text-xs">{{ form_errors(form.Name) }}</div>
        </div>
        <div class="mb-4">
            {{ form_label(form.Description) }}
            {{ form_widget(form.Description, {'attr': {'class': 'py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none ', 'placeholder': 'Description'}}) }}
             <div class="text-red-500 text-xs">{{ form_errors(form.Description) }}</div>
        </div>
           <div class="mb-4">
                {{ form_label(form.Cost) }}
                {{ form_widget(form.Cost, {'attr': {'class': 'py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none ', 'placeholder': 'Cost'}}) }}
               <div class="text-red-500 text-xs"> {{ form_errors(form.Cost) }}</div>
            </div>
            <div class="mb-4">
                {{ form_label(form.ReimbursementRate) }}
                {{ form_widget(form.ReimbursementRate, {'attr': {'class': 'py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none ', 'placeholder': 'Reimbursement Rate'}}) }}
                <div class="text-red-500 text-xs">{{ form_errors(form.ReimbursementRate) }}</div>
            </div>
            <div class="mb-4">
                {{ form_label(form.Ceiling) }}
                {{ form_widget(form.Ceiling, {'attr': {'class': 'py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none ', 'placeholder': 'Ceiling'}}) }}
               <div class="text-red-500 text-xs"> {{ form_errors(form.Ceiling) }}</div>
            </div>
            <div class="grid">
                            <button type="submit" class="py-2 px-2 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none">Save</button>
                            <a class="py-2 px-2 mt-3 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" href="{{ path('app_insurancePlan_list') }}">back to list</a>
                        </div>
                </div>
      </div>
    </div>

  </div>
    {{ form_end(form) }}
</div>