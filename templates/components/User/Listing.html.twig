<div{{ attributes }} style="margin-left: 150px;">
    <div class="form-control" style="margin-top: 50px;">
        <div class="search-container" style="position: relative; display: inline-block;">
            <input type="text"
                   data-model="query"
                   placeholder="   Search for users"
                   class="input input-bordered w-96 "
                   style="padding-left: 30px; border-color:#A6C0CD;"/>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                 stroke="currentColor" class="w-6 h-6"
                 style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%);">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"/>
            </svg>
        </div>
        <br>
        <div class="select-container" style="position: relative; display: inline-block;">
            <select data-model="sort" class="input input-bordered w-96 "
                    style="padding-left: 30px; border-color:#A6C0CD;">
                <option value="asc"> Sort by username in ascending order (A-Z)</option>
                <option value="desc"> Sort by username in descending order (Z-A)</option>
            </select>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                 stroke="currentColor" class="w-6 h-6"
                 style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%);">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M10.5 6h9.75M10.5 6a1.5 1.5 0 1 1-3 0m3 0a1.5 1.5 0 1 0-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-9.75 0h9.75"/>
            </svg>
        </div>
    </div>
    {% if computed.users|length > 0 %}
        <div data-loading="addClass(opacity-50)" class="mt-3 flex flex-wrap gap-4">
            {# @var user \App\Entity\User #}
            {% for user in computed.users %}
                <twig:User:CardUser user="{{ user }}"/>
            {% endfor %}
        </div>
    {% else %}
        <div class="pt-3">Ah! No Users found matching "{{ query }}"</div>
    {% endif %}
</div>