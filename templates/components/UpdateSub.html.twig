{# templates/subscription/update.html.twig #}

<div>

    <h1 class="text-3xl font-bold text-center mb-4 mt-4">Update Subscription</h1>
    {{ form_start(form) }}
    <div class="mt-10 flex items-center justify-center ">
        <div class="w-full md:w-1/2 lg:w-1/3 xl:w-1/3 mx-4 sm:mx-6 md:mx-5 lg:mx-12 xl:mx-16 py-6 px-4 sm:px-6 md:px-8 lg:px-12 xl:px-16 bg-white shadow-md rounded-lg">
            <div class="mb-4">
                {{ form_label(form.startDate) }}
                {{ form_widget(form.startDate, {'attr': {'class': 'py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none', 'placeholder': 'Start Date'}}) }}
                <div class="text-red-500 text-xs">{{ form_errors(form.startDate) }}</div>
            </div>
            <div class="mb-4">
                {{ form_label(form.endDate) }}
                {{ form_widget(form.endDate, {'attr': {'class': 'py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none', 'placeholder': 'End Date'}}) }}
                <div class="text-red-500 text-xs">{{ form_errors(form.endDate) }}</div>
            </div>
            <div class="mb-4">
                {{ form_label(form.status) }}
                {{ form_widget(form.status, {'attr': {'class': 'py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none', 'placeholder': 'Status'}}) }}
                <div class="text-red-500 text-xs">{{ form_errors(form.status) }}</div>
            </div>
            <div class="mb-4">
                {{ form_label(form.patient) }}
                {{ form_widget(form.patient, {'attr': {'class': 'py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none', 'placeholder': 'Patient'}}) }}
                <div class="text-red-500 text-xs">{{ form_errors(form.patient) }}</div>
            </div>
            <div class="mb-4">
                {{ form_label(form.plan) }}
                {{ form_widget(form.plan, {'attr': {'class': 'py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none', 'placeholder': 'Plan'}}) }}
                <div class="text-red-500 text-xs">{{ form_errors(form.plan) }}</div>
            </div>
            <div class="grid">
                <button type="submit" class="py-2 px-2 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none">Save</button>
                <a class="py-2 px-2 mt-3 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" href="{{ path('app_subscription') }}">Back to list</a>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>