{# @var medication \App\Entity\Medication #}
{% props medication = null %}
<div{{ attributes }}>
    <article class="card w-[25rem] h-[20rem] bg-base-100 shadow-xl">
        <div class="card-body">
            <header class="card-title">
                <span>Medication:</span>
                <h2>{{ medication.name }}</h2>
            </header>
            <div class="flex justify-center space-x-4">
                <p class="line-clamp-3">{{ medication.description }}</p>
            </div>
            <div class="divider"></div>
            <div class="prose">
                <p>{{ medication.insured ? 'Insured' : 'Not Insured' }}</p>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                <div class="flex justify-end space-x-2">
                   {#  <a href="{{ path('app_medication_edit', {'id': medication.id}) }}" class="btn btn-primary">Update</a>
                    <a href="{{ path('app_medication_delete', {'id': medication.id}) }}" class="btn btn-danger">Delete</a>#}
                </div>
            {% endif %}
        </div>
    </article>
</div>