{% extends 'base.html.twig' %}

{% block title %}List of Issues{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .title-color {
            color: #3082cfff; /* Color for the title "List of Issues" */
        }
        .card-title-color {
            color: #38b2acff; /* Secondary color from the base template */
        }
        .text-black {
            color: black; /* Black color for text */
        }
        .collapse {
            display: none;
            overflow: hidden;
            transition: height 0.3s ease;
        }
        .collapsed {
            display: block;
        }
        .card {
            border: 1px solid #3082cfff; /* Border color for cards */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-2xl font-bold title-color mb-4">List of Issues</h1>
        <div class="row">
            <div class="col-md-12">
                <!-- Grid -->
                <div class="grid lg:grid-cols-2 lg:gap-y-8 gap-6">
                    {% for issue in issues %}
                        <!-- Card -->
                        <div class="group rounded-xl overflow-hidden" onclick="toggleDetails('{{ issue.id }}')">
                            <div class="sm:flex">
                                <div class="grow mt-4 sm:mt-0 sm:ms-6 px-4 sm:px-0">
                                    <h3 class="text-lg font-semibold card-title-color">
                                        {{ issue.title }}
                                    </h3>
                                    <p class="mt-2 text-sm text-black">
                                        {{ issue.content }}
                                    </p>
                                    <!-- Additional details -->
                                    <div class="collapse mt-4" id="details-{{ issue.id }}">
                                        <p><strong>Category:</strong> {{ issue.category }}</p>
                                        <p><strong>Creation Date:</strong> {{ issue.creationDate|date('Y-m-d') }}</p>
                                    </div>
                                </div>
                                <div class="flex items-center">
                                    <a href="{{ path('app_issue_edit', {'id': issue.id}) }}" class="btn btn-primary ml-auto mr-2">Edit</a>
                                    {# Delete button with red color and icon #}
                                    <form method="post" action="{{ path('app_issue_delete', {'id': issue.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ issue.id) }}">
                                        <button type="submit" class="btn btn-danger">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth="1.5" stroke="currentColor" class="w-6 h-6 inline-block">
                                                <path strokeLinecap="round" strokeLinejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                            </svg>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- End Card -->
                    {% endfor %}
                </div>
                <!-- End Grid -->
            </div>
        </div>
    </div>

    <script>
        function toggleDetails(issueId) {
            const detailsDiv = document.getElementById('details-' + issueId);
            if (detailsDiv.classList.contains('collapsed')) {
                detailsDiv.classList.remove('collapsed');
            } else {
                detailsDiv.classList.add('collapsed');
            }
        }
    </script>
{% endblock %}
