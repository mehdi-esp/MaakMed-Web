{% extends 'base.html.twig' %}

{% block title %}List of Issues{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .title-color {
            color: #3082cfff; /* Color for the title "List of Issues" */
            font-weight: bold; /* Bold font for the title */
        }

        .card-title-color {
            color: #38b2acff; /* Secondary color from the base template */
        }

        .text-black {
            color: black; /* Black color for text */
        }

        .upper-container {
            background-color: transparent; /* Transparent background */
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-add {
            background-color: #38b2acff; /* Background color for "Add issues" button */
            color: white; /* Text color for "Add issues" button */
            border: none; /* No border for "Add issues" button */
            border-radius: 4px; /* Rounded corners for "Add issues" button */
            padding: 10px 20px; /* Padding inside "Add issues" button */
            cursor: pointer; /* Cursor style for "Add issues" button */
        }

        .lower-container {
            flex: 1;
            overflow-y: auto; /* Enable vertical scrolling if content exceeds container height */
            padding: 10px;
            background-color: transparent; /* Transparent background */
        }

        .card {
            border: 1px solid #3082cfff; /* Border color for cards */
            cursor: pointer; /* Change cursor to pointer on hover */
        }

        .collapse {
            display: none; /* Initially hide additional details */
        }
    </style>
{% endblock %}

{% block body %}
    <section class="bg-gray-50 flex items-center">
        <div class="max-w-screen-xl px-4 mx-auto lg:px-12 w-full" {{ stimulus_controller("issue") }}>
            <div class="relative bg-white shadow-md sm:rounded-lg">
                <div class="flex flex-col items-center justify-between p-4 space-y-3 md:flex-row md:space-y-0 md:space-x-4">
                    <div class="w-full md:w-1/2">
                        <form class="flex items-center">
                            <label for="simple-search" class="sr-only">Search</label>
                            <div class="relative w-full">
                                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                    <svg aria-hidden="true" class="w-5 h-5 text-gray-500" fill="currentColor"
                                         viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                              d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                                              clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <input type="text" id="simple-search"
                                       class="block w-full p-2 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary-500 focus:border-primary-500"
                                       placeholder="Search" required="">
                            </div>
                        </form>
                    </div>
                    <div class="flex flex-col items-stretch justify-end flex-shrink-0 w-full space-y-2 md:w-auto md:flex-row md:space-y-0 md:items-center md:space-x-3">
                        <a href="{{ path('app_addIssue') }}" class="btn btn-primary">Add Issue</a>
                        <!-- Add the filter button here -->
                        <div class="dropdown">
                            <div tabindex="0" role="button" class="btn m-1">Filter</div>
                            <ul
                                    id="category-filter"
                                    tabindex="0"
                                    class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
                                <li>
                                    <label class="label cursor-pointer">
                                        <span class="label-text">Pharmacy</span>
                                        <input name="pharmacy" type="checkbox" checked="checked" class="checkbox"/>
                                    </label>
                                </li>
                                <li>
                                    <label class="label cursor-pointer">
                                        <span class="label-text">Doctor</span>
                                        <input name="doctor" type="checkbox" checked="checked" class="checkbox"/>
                                    </label>
                                </li>
                                <li>
                                    <label class="label cursor-pointer">
                                        <span class="label-text">other</span>
                                        <input name="other" type="checkbox" checked="checked" class="checkbox"/>
                                    </label>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <!-- Lower Section -->
        <div class="lower-container">
            <h2 class="text-2xl title-color mb-4">Your submitted Issues</h2> <!-- Title -->
            <div class="row">
                <div class="col-md-12">
                    <!-- Grid -->
                    <div class="grid lg:grid-cols-2 lg:gap-y-8 gap-6">
                        {% for issue in issues %}
                            <!-- Card -->
                            <div class="group rounded-xl overflow-hidden" onclick="toggleDetails('{{ issue.id }}')">
                                <div class="sm:flex">
                                    <div class="grow mt-4 sm:mt-0 sm:ms-6 px-4 sm:px-0">
                                        <h3 class="text-lg font-semibold card-title-color">
                                            {{ issue.title }}
                                        </h3>
                                        <p class="mt-2 text-sm text-black">
                                            {{ issue.content }}
                                        </p>
                                        <!-- Additional details -->
                                        <div class="collapse mt-4" id="details-{{ issue.id }}">
                                            <p><strong>Category:</strong> {{ issue.category }}</p>
                                            <p><strong>Creation Date:</strong> {{ issue.creationDate|date('Y-m-d') }}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="flex items-center">
                                        <a href="{{ path('app_issue_edit', {'id': issue.id}) }}"
                                           class="btn btn-primary ml-auto mr-2">Edit</a>
                                        {# Delete button with red color and icon #}
                                        <form method="post" action="{{ path('app_issue_delete', {'id': issue.id}) }}"
                                              onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="_token"
                                                   value="{{ csrf_token('delete' ~ issue.id) }}">
                                            <button type="submit" class="btn btn-danger">
                                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                                     strokeWidth="1.5" stroke="currentColor"
                                                     class="w-6 h-6 inline-block">
                                                    <path strokeLinecap="round" strokeLinejoin="round"
                                                          d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"/>
                                                </svg>
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- End Card -->
                        {% endfor %}
                    </div>
                    <!-- End Grid -->
                </div>
            </div>
        </div>
    </div>

    <script>
        // Dynamic search function
        document.getElementById('simple-search').addEventListener('input', function () {
            const searchText = this.value.toLowerCase();
            const cards = document.querySelectorAll('.group');
            cards.forEach(function (card) {
                const title = card.querySelector('.card-title-color').textContent.toLowerCase();
                if (title.includes(searchText)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });

        function toggleDetails(issueId) {
            const detailsDiv = document.getElementById('details-' + issueId);
            detailsDiv.classList.toggle('collapse');
        }


    </script>

{% endblock %}
