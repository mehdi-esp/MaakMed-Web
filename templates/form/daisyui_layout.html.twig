{% use 'tailwind_2_layout.html.twig' %}

{%- block form_label -%}
    {%- set label_class = label_class|default('label') -%}
    {{- parent() -}}
{%- endblock form_label -%}

{%- block form_widget_simple -%}
    {%- set type = type|default('text') -%}
    {%- if type in ['text', 'number', 'integer'] -%}
        {%- set widget_class = widget_class|default('input input-bordered') -%}
        {%- set widget_errors_class = widget_errors_class|default('input-error text-error') -%}
    {%- endif -%}
    {{- parent() -}}
{%- endblock form_widget_simple -%}

{%- block password_widget -%}
    {%- set widget_class = widget_class|default('input input-bordered') -%}
    {%- set widget_errors_class = widget_errors_class|default('input-error text-error') -%}
    {{- parent() -}}
{%- endblock password_widget -%}

{%- block email_widget -%}
    {%- set widget_class = widget_class|default('input input-bordered') -%}
    {%- set widget_errors_class = widget_errors_class|default('input-error text-error') -%}
    {{- parent() -}}
{%- endblock email_widget -%}

{%- block form_errors -%}
    {%- set error_item_class = error_item_class|default('text-error') -%}
    {{- parent() -}}
{%- endblock form_errors -%}

{%- block choice_widget -%}
    {%- set widget_class = widget_class|default('select select-bordered') -%}
    {%- set widget_errors_class = widget_errors_class|default('select-error') -%}
    {{- parent() -}}
{%- endblock choice_widget -%}

{%- block textarea_widget -%}
    {%- set widget_class = widget_class|default('textarea textarea-bordered textarea-lg') -%}
    {%- set widget_errors_class = widget_errors_class|default('textarea-error') -%}
    {{- parent() -}}
{%- endblock textarea_widget -%}

{% block body %}
    <!-- Main modal -->
    <div id="updateProductModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-modal md:h-full">
        <div class="modal-content">
            <!-- Modal content -->
            {{ form_start(form) }}
            <!-- Form content -->
            <div>
                <label for="title" class="block mb-2 text-sm font-medium text-black">Title</label>
                {{ form_widget(form.title) }}
            </div>
            <div>
                <label for="content" class="block mb-2 text-sm font-medium text-black">Content</label>
                {{ form_widget(form.content) }}
            </div>
            <div>
                <label for="category" class="block mb-2 text-sm font-medium text-black">Category</label>
                {{ form_widget(form.category, { 'disabled': true }) }}
            </div>
            <div class="flex items-center justify-between mt-4">
                <button type="submit">Update</button>
                <a href="{{ path('app_issue_index') }}">Back to List</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
